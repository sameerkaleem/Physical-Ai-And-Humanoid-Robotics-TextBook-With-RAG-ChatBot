{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/^(.*)\\.html?$",
      "dest": "/index.html"
    },
    {
      "src": "/^(.*)\\.js$",
      "dest": "/assets/js/$1.js"
    },
    {
      "src": "/^(.*)\\.css$",
      "dest": "/assets/css/$1.css"
    },
    {
      "src": "/^(.*)\\.(png|jpe?g|gif|svg|webp|ico)$",
      "dest": "/assets/img/$1.$2"
    },
    {
      "src": "/^(.*)$",
      "dest": "/index.html"
    }
  ]
}